<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kimery.ohmslawcalculator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".OhmsMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EquationList"
            android:label="@string/title_activity_volts_equation_list" >
        </activity>
        <activity
            android:name=".SolveEquation"
            android:label="@string/title_activity_solve_equation"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".SolvedEquations"
            android:label="@string/title_activity_solved_equations" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/DialogTheme" >
        </activity>
    </application>

</manifest>
