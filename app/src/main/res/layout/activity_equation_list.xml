<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kimery.ohmslawcalculator.voltsEquationList"
    android:background="@color/navy">
    
    <TextView
        style="@style/mainDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volt_equations_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/voltEquationTitle" />

    <!--Line Separator -->

    <View
        android:id="@+id/separatorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/OldLace"
        android:padding="5dp"
        android:layout_below="@+id/voltEquationTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_below="@+id/separatorLine"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1px"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
