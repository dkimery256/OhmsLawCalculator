<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!--Styles for Edit Text -->
        <item name="colorControlNormal">@color/OldLace</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>

        <!--Styles for the Spinners -->
        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    <!-- Custom styles for widgets -->
    </style>
    <!--Style for main texts -->
    <style name="mainDescription">
        <item name="android:textColor">@color/OldLace</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!--Style for equations -->
    <style name="solveEquations">
        <item name="android:textColor">@color/OldLace</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!--Style for symbol labels on main layout -->
    <style name ="mainLabel">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/Indigo</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Listview styles-->
    <style name="listItem">
        <item name="android:textColor">@color/OldLace</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!-- Style for solved/unsolved equations -->
    <style name="equationView">
        <item name="android:textColor">@color/OldLace</item>
        <item name="android:textSize">35sp</item>
    </style>
    <!--Spinner Styles -->
    <style name="spinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/OldLace</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/navy</item>
    </style>


    <style name="spinnerDropDownItemStyle" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@color/OldLace</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/DimGray</item>
    </style>
</resources>
